<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvKalkulator"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:text="MASUKAN DUA ANGKA"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/etFirstNumber"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Masukan angka pertama"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <EditText
        android:id="@+id/etSecondNumber"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Masukan angka kedua"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btTambah"
            android:layout_width="60dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="+"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/btKurang"
            android:layout_width="60dp"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:text="-"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/btKali"
            android:layout_width="60dp"
            android:layout_marginLeft="255dp"
            android:layout_height="wrap_content"
            android:text="X"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/btBagi"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="328dp"
            android:text="/"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <Button
        android:id="@+id/btClear"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BERSIHKAN"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="HASIL"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        tools:ignore="HardcodedText" />

</LinearLayout>
